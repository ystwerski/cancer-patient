 <div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <h3>Edit Cancer Info:</h3>
    </div>
  </div>
</div>



<%= form_tag cancer_path(@cancer.id), :method => :patch do %>

<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <%= label_tag :Cancer_type %>
    </div>
    <div class="col-md-3">
      <%= label_tag :Age_of_Diagnosis %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <%= text_field_tag :cancer_type, @cancer.cancer_type %>
    </div>
  <div class="col-md-3">
      <%= text_field_tag :age_of_diagnosis, @cancer.age_of_diagnosis %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
     <%= submit_tag "Submit", :class => "btn btn-primary" %>
   </div>
 </div>
</div>

<% end %>